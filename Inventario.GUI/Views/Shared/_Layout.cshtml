<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inventario UdC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Categoria", "Index", "Categoria")</li>
                    <li>@Html.ActionLink("Espacio", "Index", "Espacio")</li>
                    <li>@Html.ActionLink("Marca", "Index", "Marca")</li>
                    <li>@Html.ActionLink("TipoProducto", "Index", "TipoProducto")</li>
                    <li>@Html.ActionLink("Producto", "Index", "Producto")</li>
                    <li>@Html.ActionLink("Persona", "Index", "Persona")</li>
                    <li>@Html.ActionLink("Sede", "Index", "Sede")</li>
                    <li>@Html.ActionLink("Edificio", "Index", "Edificio")</li>
                    <li>@Html.ActionLink("Piso", "Index", "Piso")</li>
                    @if (Session.Count > 0)
                    {
                        int userId = Int32.Parse(Session["userId"].ToString());
                        IEnumerable<Inventario.GUI.Models.Seguridad.FormModel> list = Inventario.GUI.Helpers.Menu.GetMenuForms(userId);
                        foreach (var menu in list)
                        {
                            <li><a href="@menu.Url">@menu.Name</a></li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "User")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @if (Session.Count > 0)
        {
            <div class="sessionBar">
                En sesión:                <strong>@Session["username"]</strong>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
